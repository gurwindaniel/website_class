<%- include('./partials/header.ejs') %>


<div class="container mt-5">
	<h2 style="color: #2193b0;" class="mb-4">Tour Packages</h2>
	<% if (typeof error !== 'undefined' && error) { %>
		<div class="alert alert-danger"><%= error %></div>
	<% } %>
	<div class="row">
		<% (programs || []).forEach(function(program) { %>
			<div class="col-md-4 mb-4">
				<div class="card h-100 shadow">
					<% if (program.iconBase64) { %>
						<img src="data:image/png;base64,<%= program.iconBase64 %>" class="card-img-top" alt="Program Icon" style="height:200px;object-fit:cover;">
					<% } else { %>
						<div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height:200px;">No Image</div>
					<% } %>
					<div class="card-body">
						<h5 class="card-title" style="color: #2193b0;"><%= program.title %></h5>
						<p class="card-text program-desc" data-full="<%= program.description.replace(/"/g, '&quot;') %>"></p>
					</div>
				</div>
			</div>
		<% }); %>
	</div>
</div>
<script src="../public/js/index.js"></script>
<%- include('./partials/footer.ejs') %>